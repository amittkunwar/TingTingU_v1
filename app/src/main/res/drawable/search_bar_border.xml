<!-- res/drawable/search_bar_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@android:color/transparent" /> <!-- Background color -->
    <stroke
        android:width="1dp"
        android:color="#7E57C2" /> <!-- Border color and width -->
    <corners android:radius="8dp"/> <!-- Rounded corners (optional) -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="4dp"
        android:bottom="4dp" /> <!-- Padding inside the border -->
</shape>
