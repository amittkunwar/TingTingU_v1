<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/lavander"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="115dp" />

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_alignParentTop="true"
        android:background="@color/lavander" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="43dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="19dp"
        android:src="@drawable/back4" />

    <ImageView
        android:layout_width="69dp"
        android:layout_height="41dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="211dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/robo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="133dp"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/robo"
        android:text="Chatbot"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="157dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/robo"
        android:text="online"
        android:textColor="#808080"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/message"
    android:layout_width="405dp"
    android:layout_height="53dp"
    android:layout_alignParentBottom="true"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/rounded_search_box"
    android:drawablePadding="8dp"
    android:hint="  Ask anything powered by Gemini..."
    android:imeOptions="actionSend"
    android:inputType="text"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:singleLine="true"
    android:textColorHint="#808080"
    android:textSize="12sp" />

    <ImageView
        android:id="@+id/send"
        android:layout_width="37dp"
        android:layout_height="47dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="14dp"
        android:src="@drawable/send" />

</RelativeLayout>
