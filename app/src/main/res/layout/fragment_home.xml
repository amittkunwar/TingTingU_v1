<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- Image Slider (ViewPager2) at the top -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/imageSlider"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_alignParentTop="true"
        android:layout_margin="12dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corners"
        android:clipToOutline="true"
        />

    <!-- GridLayout just below the ViewPager2 -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="294dp"
        android:layout_below="@id/imageSlider"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:background="@color/lavander"
        android:columnCount="4"
        android:padding="6dp"
        android:rowCount="6">

        <!-- First Column -->
        <ImageView
            android:id="@+id/survey"
            android:layout_width="45dp"
            android:layout_height="43dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="25dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="7dp"
            android:contentDescription="Survey Icon"
            android:src="@drawable/survey" />

        <TextView
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/robo"
            android:maxLines="2"
            android:text="Survey"
            android:textSize="10sp" />

        <!-- Second Column -->
        <ImageView
            android:id="@+id/add_user"
            android:layout_width="45dp"
            android:layout_height="43dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="25dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="7dp"
            android:contentDescription="Add User Icon"
            android:src="@drawable/add_user" />

        <TextView
            android:layout_width="44dp"
            android:layout_height="34dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/robo"
            android:maxLines="2"
            android:text="Create Profile"
            android:textAlignment="center"
            android:textSize="10sp" />

        <!-- Third Column -->
        <ImageView
            android:id="@+id/assign_user"
            android:layout_width="45dp"
            android:layout_height="43dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="25dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="7dp"
            android:contentDescription="Assign User Icon"
            android:src="@drawable/assign_user" />

        <TextView
            android:layout_width="49dp"
            android:layout_height="42dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/robo"
            android:maxLines="2"
            android:text="Assigned Profile"
            android:textAlignment="center"
            android:textSize="10sp" />

        <!-- Fourth Column -->
        <ImageView
            android:id="@+id/invite_user"
            android:layout_width="45dp"
            android:layout_height="43dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_margin="20dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="7dp"
            android:contentDescription="Invite User Icon"
            android:src="@drawable/invite" />

        <TextView
            android:layout_width="49dp"
            android:layout_height="34dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/robo"
            android:maxLines="2"
            android:text="Invite Friend"
            android:textAlignment="center"
            android:textSize="10sp" />

        <!-- Fifth Column -->
        <ImageView
            android:id="@+id/msg"
            android:layout_width="45dp"
            android:layout_height="43dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="14dp"
            android:contentDescription="Message Icon"
            android:src="@drawable/msg" />

        <TextView
            android:layout_width="56dp"
            android:layout_height="45dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="55dp"
            android:fontFamily="@font/robo"
            android:maxLines="2"
            android:text="TTU Messages"
            android:textAlignment="center"
            android:textSize="10sp" />

        <!-- Sixth Column -->
        <ImageView
            android:id="@+id/tafreeh"
            android:layout_width="45dp"
            android:layout_height="43dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="14dp"
            android:contentDescription="Tafreeh Icon"
            android:src="@drawable/tafreeh" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="55dp"
            android:fontFamily="@font/robo"
            android:maxLines="2"
            android:text="Tafreeh"
            android:textSize="10sp" />

        <!-- Seventh Column -->
        <ImageView
            android:id="@+id/coin"
            android:layout_width="45dp"
            android:layout_height="43dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginLeft="14dp"
            android:contentDescription="Coin Icon"
            android:src="@drawable/coins" />

        <TextView
            android:layout_width="49dp"
            android:layout_height="34dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="55dp"
            android:fontFamily="@font/robo"
            android:maxLines="2"
            android:text="TTU coins History"
            android:textAlignment="center"
            android:textSize="10sp" />

        <!-- Eighth Column -->
        <ImageView
            android:id="@+id/sos"
            android:layout_width="45dp"
            android:layout_height="43dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_marginLeft="14dp"
            android:contentDescription="SOS Icon"
            android:src="@drawable/sos" />

        <TextView
            android:layout_width="42dp"
            android:layout_height="34dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="55dp"
            android:fontFamily="@font/robo"
            android:maxLines="2"
            android:text="SOS Groups"
            android:textAlignment="center"
            android:textSize="10sp" />

        <!-- Ninth Column -->
        <ImageView
            android:id="@+id/withdraw"
            android:layout_width="45dp"
            android:layout_height="43dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginLeft="16dp"
            android:contentDescription="Withdraw"
            android:src="@drawable/withdraw" />

        <TextView
            android:layout_width="53dp"
            android:layout_height="29dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="53dp"
            android:fontFamily="@font/robo"
            android:maxLines="2"
            android:text="Withdraw"
            android:textSize="10sp" />

        <!-- Tenth Column -->

        <ImageView
            android:id="@+id/dialer"
            android:layout_width="45dp"
            android:layout_height="43dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginLeft="14dp"

            android:contentDescription="Dialer Icon"
            android:src="@drawable/dialer" />

        <TextView
            android:layout_width="43dp"
            android:layout_height="27dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="53dp"
            android:fontFamily="@font/robo"
            android:maxLines="2"
            android:text="Dialer"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/translate"
            android:layout_width="45dp"
            android:layout_height="43dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_marginLeft="16dp"

            android:contentDescription="Dialer"
            android:src="@drawable/translate" />

        <TextView
            android:layout_width="53dp"
            android:layout_height="29dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="53dp"
            android:fontFamily="@font/robo"

            android:maxLines="2"
            android:text="Translate"
            android:textAlignment="center"
            android:textSize="10sp" />


    </GridLayout>

</RelativeLayout>
