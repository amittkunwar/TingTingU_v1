<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".secondpage"
    android:background="#eeebf5">


 <ImageView
     android:layout_width="match_parent"
     android:layout_height="568dp"
     android:layout_alignParentTop="true"
     android:layout_alignParentEnd="true"
     android:layout_marginTop="-131dp"
     android:layout_marginEnd="-11dp"
     android:src="@drawable/banner" />

 <ImageView
     android:layout_width="154dp"
     android:layout_height="wrap_content"
     android:layout_alignParentStart="true"
     android:layout_alignParentTop="true"
     android:layout_marginStart="34dp"
     android:layout_marginTop="48dp"
     android:src="@drawable/bg_logo" />

 <ImageView
     android:id="@+id/lang"
     android:layout_width="234dp"
     android:layout_height="186dp"
     android:layout_alignParentStart="true"
     android:layout_alignParentTop="true"
     android:layout_marginStart="88dp"
     android:layout_marginTop="234dp"
     android:src="@drawable/lang" />

 <TextView
     android:id="@+id/select"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@id/lang"
     android:layout_centerHorizontal="true"

     android:layout_marginTop="20dp"
     android:fontFamily="@font/gb"
     android:text="Select Language"
     android:textSize="21sp"
     android:textStyle="bold" />

 <!-- Spinner aligned below TextView and centered -->
 <Spinner
     android:id="@+id/language_spinner"
     android:layout_width="306dp"
     android:layout_height="52dp"
     android:layout_below="@id/select"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="16dp"
     android:background="@drawable/spinner_background"
     android:entries="@array/languages"

     />

 <!-- Button aligned below Spinner and centered -->
 <Button
     android:id="@+id/continue_button"
     android:layout_width="306dp"
     android:layout_height="58dp"
     android:layout_below="@id/language_spinner"
     android:layout_centerHorizontal="true"

     android:backgroundTint="#6021E5"
     android:padding="12dp"
     android:text="Continue"
     android:textColor="@color/white"
     android:textSize="17sp"
     android:layout_marginVertical="30dp" />

</RelativeLayout>
